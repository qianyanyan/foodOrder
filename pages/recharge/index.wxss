/* pages/recharge/index.wxss */
.rechargeContainer{
    width: 100%;
    height:360rpx;
}
.rechargeContainer .img{
    width: 100%;
    height: 100%;
}
.moneyContainer{
    margin: 20rpx 0 0 0 ;
    width: 100%;
    height: auto;
    background: #fff;
    overflow: hidden
}
.moneyContainer  .moneyBox{
    float: left;
    width: 25%;
}
.moneyContainer .money{
   text-align: center;
   height:80rpx;
   line-height:80rpx;
   margin: 20rpx;
   font-size: 13px;
   color:#999;
   border: 1px solid #999;
   border-radius: 5rpx;
}
.active{
    color:#CDAC75 !important;
    border: 1px solid #CDAC75 !important;
}
.input{
    height:50rpx;
    margin-top:10rpx;

}
.submitbutton{
    position: fixed;
    z-index: 99;
    width: 95%;
    margin: auto;
    color:#fff;
    bottom:20rpx;
    background: rgb(255, 148, 52);
  
    font-size: 13px;
}